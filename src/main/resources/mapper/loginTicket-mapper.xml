<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.community.DAO.LoginTicketMapper">
    <resultMap id="ticketResultMap" type="com.nowcoder.community.entity.LoginTicket">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="ticket" column="ticket"/>
        <result property="status" column="status"/>
        <result property="expired" column="expired"/>
    </resultMap>

    <sql id="insertFields">
        user_id, ticket, status, expired
    </sql>

    <sql id="selectFields">
        id, user_id, ticket, status, expired
    </sql>

    <!-- 查询 ticket -->
    <select id="selectLoginTicketByTicket" resultMap="ticketResultMap">
        SELECT <include refid="selectFields"/>
        FROM login_ticket
        WHERE ticket = #{ticket}
    </select>

    <!-- 插入 ticket -->
    <insert id="insertLoginTicket" parameterType="com.nowcoder.community.entity.LoginTicket"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO login_ticket (<include refid="insertFields"/>)
        VALUES (#{userId}, #{ticket}, #{status}, #{expired})
    </insert>

    <!-- 更新 status -->
    <update id="updateStatus" parameterType="com.nowcoder.community.entity.LoginTicket">
        UPDATE login_ticket
        SET status = #{status}
        WHERE ticket = #{ticket}
    </update>
</mapper>