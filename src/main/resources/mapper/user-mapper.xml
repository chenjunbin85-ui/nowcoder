<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nowcoder.community.DAO.UserMapper">

    <resultMap id="userResultMap" type="User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="salt" column="salt"/>
        <result property="email" column="email"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="activationCode" column="activation_code"/>
        <result property="headerUrl" column="header_url"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <!-- 查询时使用的列（包含id） -->
    <sql id="selectColumns">
        id, username, password, salt, email, type, status,
        activation_code, header_url, create_time
    </sql>

    <!-- 插入时使用的列（不包含id，因为id是自增的） -->
    <sql id="insertColumns">
        username, password, salt, email, type, status,
        activation_code, header_url, create_time
    </sql>

    <select id="selectById" resultMap="userResultMap">
        SELECT
        <include refid="selectColumns"/>
        FROM user WHERE id = #{id}
    </select>

    <select id="selectByName" resultMap="userResultMap">
        SELECT
        <include refid="selectColumns"/>
        FROM user WHERE username = #{name}
    </select>

    <select id="selectByEmail" resultMap="userResultMap">
        SELECT
        <include refid="selectColumns"/>
        FROM user WHERE email = #{email}
    </select>

    <!-- 修复：使用 insertColumns（不包含id） -->
    <insert id="create" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
        <include refid="insertColumns"/>
        ) VALUES (
        #{username}, #{password}, #{salt}, #{email}, #{type}, #{status},
        #{activationCode}, #{headerUrl}, #{createTime}
        )
    </insert>

    <!-- 注意：updateStatus 方法需要两个参数，不是 User 对象 -->
    <update id="updateStatus">
        UPDATE user
        SET status = #{status}
        WHERE id = #{id}
    </update>

    <update id="updatePassword">
        UPDATE user
        SET password = #{password}
        WHERE id = #{id}
    </update>

    <update id="updateHeadUrl">
    UPDATE user
    SET header_url = #{headUrl}
    WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM user WHERE id = #{id}
    </delete>
    <!--parameterType="string"传入参数的类型-->
    <delete id="deleteByName" parameterType="string">
        DELETE FROM user WHERE username = #{name}
    </delete>

</mapper>